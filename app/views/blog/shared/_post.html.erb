<li>
  <h2><%= link_to post.title, blog_post_url(post) %></h2>
  <p class='posted_at'>
    <%= post.created_at.strftime("#{to_ordinal(post.created_at.day)} of %B, %Y") %>
  </p>
  <div class='clearfix'>
    <%= truncate(post.body, :length => RefinerySetting.find_or_set(:blog_post_teaser_length, 20), :preserve_html_tags => true, :omission=> raw(link_to "Read more", blog_post_url(post))) %> 
  </div>
</li>